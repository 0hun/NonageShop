<?xml version="1.0" encoding="UTF-8"?>
<web-app >

<!-- front Servlet -->
<servlet> 
   <servlet-name>ControllerServlet</servlet-name> 
   <servlet-class>com.nonage.controller.ControllerServlet</servlet-class> 
</servlet> 
<servlet-mapping> 
   <servlet-name>ControllerServlet</servlet-name> 
   <url-pattern>*.do</url-pattern> 
</servlet-mapping>


<!-- SiteMesh  -->
<filter>
	<filter-name>sitemesh</filter-name>
	<filter-class>
		com.opensymphony.sitemesh.webapp.SiteMeshFilter
	</filter-class>
</filter>
<filter-mapping>
	<filter-name>sitemesh</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>

